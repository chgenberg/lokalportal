generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("tenant") // "landlord" | "tenant"
  phone        String?
  createdAt    DateTime @default(now())

  listings              Listing[]
  favorites             Favorite[]
  landlordConversations Conversation[] @relation("LandlordConversations")
  tenantConversations   Conversation[] @relation("TenantConversations")
  messages              Message[]

  @@map("users")
}

model Listing {
  id          String   @id @default(uuid())
  title       String
  description String
  city        String
  address     String
  type        String   // "sale" | "rent"
  category    String   // "butik" | "kontor" | "lager" | "ovrigt"
  price       Int
  size        Int
  imageUrl    String   @default("")
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  lat         Float    @default(0)
  lng         Float    @default(0)
  tags        String[] @default([])

  contactName  String @default("")
  contactEmail String @default("")
  contactPhone String @default("")

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id])

  conversations Conversation[]
  favorites     Favorite[]

  @@index([city])
  @@index([type])
  @@index([category])
  @@index([featured])
  @@index([ownerId])
  @@index([price])
  @@index([size])
  @@index([createdAt])
  @@map("listings")
}

model Conversation {
  id            String   @id @default(uuid())
  listingId     String
  listing       Listing  @relation(fields: [listingId], references: [id])
  landlordId    String
  landlord      User     @relation("LandlordConversations", fields: [landlordId], references: [id])
  tenantId      String
  tenant        User     @relation("TenantConversations", fields: [tenantId], references: [id])
  createdAt     DateTime @default(now())
  lastMessageAt DateTime @default(now())

  messages Message[]

  @@unique([listingId, tenantId])
  @@index([landlordId])
  @@index([tenantId])
  @@index([lastMessageAt])
  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  text           String
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())

  fileUrl      String?
  fileName     String?
  fileSize     Int?
  fileMimeType String?

  @@index([conversationId])
  @@index([senderId])
  @@index([read])
  @@index([createdAt])
  @@index([conversationId, createdAt])
  @@map("messages")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
  @@index([userId])
  @@map("favorites")
}
